<link rel="stylesheet" href="/css/styles3.css">
<div class="portada d-flex">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <h5 class="card-title mt-4">Iniciar Sesión</h5>
                    <div class="card-body">
                        <img src="/img/logo.jpg" alt="salud-cuidado" class="card-img-top mx-auto w-50 m-2">
                        <form action="/signin" method="POST">
                            <div class="form-group">
                                <h6 class="card-subtitle my-3 text-muted text-start">Correo electrónico: </h6>
                                <input type="email" name="correo_electronico" placeholder="Ingrese su correo electrónico" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <h6 class="card-subtitle my-3 text-muted text-start">Contraseña: </h6>
                                <input type="password" name="contrasenia" placeholder="Ingrese su contraseña" class="form-control">
                            </div>
                            <div class="form-group d-grid gap-2 mt-4">
                                <button class="btn btn-success" type="submit">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>